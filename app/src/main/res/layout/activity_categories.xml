        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="K"
            android:fontFamily="@font/roboto_bolditalic"
            android:textColor="#FF9800"
            android:textSize="24sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hadamat"
            android:textColor="#FCF6F6"
            android:fontFamily="@font/roboto_bolditalic"
            android:textSize="24sp"
            />

    </LinearLayout>

